{
    "manifest_version": 3,
    "name": "E-Course Folder Expander",
    "version": "1.0",
    "description": "Expands Folders On E-Course so you do not have to open a new tab",
    "permissions": ["activeTab", "webRequest", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://ecourse.uoi.gr/*"],
        "js": ["content.js"],
        "css": ["styles/content.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  